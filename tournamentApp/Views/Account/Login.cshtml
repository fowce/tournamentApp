@{
	Layout = null;
}
@using tournamentApp.Models.Entities
@model LoginViewModel
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вход</title>
    <link href="~/styles/account.css" rel="stylesheet" />
</head>
<body>
    <div class="login-container">
        <h2>Войти</h2>
        <form method="post" asp-action="Login">
            <div class="input-container">
                <input type="text" id="email" placeholder=" " asp-for="EmailOrName">
                <label for="email" asp-for="EmailOrName">E-mail или Имя</label>
                <span asp-validation-for="EmailOrName"></span>
            </div>
            <div class="input-container">
                <input type="password" id="password" placeholder=" " asp-for="Password">
                <label for="password" asp-for="Password">Пароль</label>
                <span asp-validation-for="Password"></span>
            </div>
			<button type="submit" class="login-btn">Войти</button>
			<p>Нет аккаунта?</p>
			<a class="register" asp-area="" asp-controller="Account" asp-action="Register">Зарегистрируйтесь</a>
        </form>
    </div>
</body>
</html>


