@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - tournamentApp</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto+Slab:wght@100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/tournamentApp.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/styles/index.css" />
	<link rel="stylesheet" href="~/styles/createTournament.css" />
	<link rel="stylesheet" href="~/styles/listTournaments.css" />
	<link rel="stylesheet" href="~/styles/Teams.css" />
	<link rel="stylesheet" href="~/styles/profile.css" />
	<link rel="stylesheet" href="~/styles/matches.css" />
	<link rel="stylesheet" href="~/styles/rating.css" />
</head>
<body style="background-color: #1B2026">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-xxl-5 pt-4">
			<div class="container">
				<div class="container navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1 align-items-center">
						<li class="nav-item me-4">
							<a class="nav-link text-white index-main" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
						</li>				
					</ul>
					<div class="dropend d-flex align-items-center">
						@if (Context.Session.GetString("UserRole") == "admin")
						{
							<span class="text-white">Администратор</span>
						}
						<a class="nav-link" id="rightdropdown" data-bs-toggle="dropdown" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Index">
							<div class="logo justify-content-center align-items-center">
								<img src="/photos/user_1077114.png" alt="" />
							</div>
						</a>
						<ul class="dropdown-menu dropdown-menu-light" aria-labelledby="rightdropdown">
							<li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Profile">Профиль</a></li>
							<li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="LogOut">Выйти</a></li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="footer text-muted" style="background-color: #1B2026">
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/expressive.annotations.validate.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
