@{
}

@using tournamentApp.Models.Entities
@model IEnumerable<PlayerRatingViewModel>

<div class="rating-container">
	<div class="rating-wrapper">
		<div class="rating-header">
			<div class="place">Место</div>
			<div class="player">Игрок</div>
			<div class="rating">Рейтинг</div>
		</div>
		<div class="rating-line"></div>
		@for (int i = 0; i < Model.Count(); i++)
		{
			<div class="rating-wrapper-items">
				<div class="item-num">@(i + 1)</div>
				<div class="item-name">@Model.ElementAt(i).Name</div>
				<div class="item-rating">@Model.ElementAt(i).Rating</div>
			</div>
		}
	</div>
</div>